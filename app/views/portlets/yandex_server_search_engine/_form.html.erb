<%= f.cms_text_field :name, :default_value => "Yandex-Server Search Engine", :instructions=>"The Search Box portlet will look this up by name, so make it unique." %>
<%= f.cms_text_field :path, :default_value => "/search/search-results", :instructions=>"The path of the page this portlet will be embedded in." %>
<%= f.cms_text_field :service_hostname, :default_value=> "", :instructions => "Host name where the Yandex-Server server is hosted, i.e. 'yandex.somedomain.com'." %>
<%= f.cms_text_field :service_port_number, :instructions => "Yandex-Server port number here." %>
<%= f.cms_text_field :collection_name, :instructions => "Copy the name of the Collection from Yandex-Server here." %>
<%= f.cms_text_area :template, :default_value => @block.class.default_template %>